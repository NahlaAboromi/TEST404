{
  "version": 2,
  "builds": [
    {
      "src": "hw2-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/app.js" },
    { "source": "/(.*)", "destination": "/hw2-frontend/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
